/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

swiper {
  height: 200px;
  width: 100%;
  margin-top: 1px
}

swiper-item image {
  width: 100%;
  height: 200px;
}
.scroll-view-item {
  height: 100px
}
.scroll-view-item_H {
  width: 200px;
  height: 100px;
  display: inline-block;
  margin-right: 6px
}
.section__title {
  color: #1296db
}
.scroll-view_H {
  display: flex;
  height: 100px;
  white-space: nowrap
}
.musicPic {
  width: 200px;
  height: 100px
}


.newsScroll{
  display:flex;
  margin-bottom:10px;
}
.newsImg{
  display:flex;
  flex:4;
  justify-content:center;
  align-items: center;
}
.newsImg image{
  width:80px;
  height:70px;
  border-radius:10%;
}
.newsText{
  display:flex;
  flex-direction:column;
  flex:9;
  font-family:"微软雅黑";
  font-size:14px;
  padding-right:20px;
}
.newsBottom{
  display:flex;
  justify-content:space-between;
  margin-top:10px;
  overflow: hidden;
  height: 20px
}
